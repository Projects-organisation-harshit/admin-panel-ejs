<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Admin Panel</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #f8f8f8;
        color: #000;
      }

      h1,
      h2 {
        color: #f13c4a;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        border: 1px solid #000;
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #f13c4a;
        color: white;
      }

      a {
        text-decoration: none;
        margin-left: 10px;
        padding: 8px;
        color: #fff;
        background-color: #f13c4a;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      a:hover {
        background-color: #d1323f;
      }

      form {
        margin-top: 20px;
        display: none;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #000;
      }

      input {
        padding: 8px;
        margin-bottom: 12px;
        width: 100%;
        box-sizing: border-box;
      }

      button {
        padding: 12px;
        background-color: #f13c4a;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #d1323f;
      }
    </style>
  </head>
  <body>
    <button style="background-color: black">
      <a href="/" style="background-color: black">home</a>
    </button>
    <h2
      onclick="toggleFormVisibility()"
      style="
        background-color: #f13c4a;
        width: max-content;
        color: white;
        padding: 10px;
        border-radius: 10px;
        font-size: medium;
        cursor: pointer;
      "
    >
      Add Data
    </h2>
    <form action="/events/add" method="post">
      <label for="title">Title:</label>
      <input type="text" name="title" required />
      <label for="description">Description:</label>
      <input type="text" name="description" required />
      <label for="address">Address:</label>
      <input type="text" name="address" required />
      <label for="city">City:</label>
      <input type="text" name="city" required />
      <label for="state">State:</label>
      <input type="text" name="state" required />
      <label for="date">Date:</label>
      <input type="date" name="date" required />
      <button type="submit">Add Event</button>
    </form>
    <h1>Events List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(event => { %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.address %></td>
          <td><%= event.city %></td>
          <td><%= event.state %></td>
          <td><%= event.date %></td>
          <td>
            <a
              href="/events/edit/<%= event.id %>"
              style="background-color: rgb(86, 86, 255)"
              >Edit</a
            >
            <a
              href="/events/delete/<%= event.id %>"
              style="background-color: #d1323f"
              >Delete</a
            >
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <script>
      function toggleFormVisibility() {
        var form = document.getElementsByTagName("form")[0];
        form.style.display = form.style.display === "none" ? "block" : "none";
        changeValue();
      }
      function changeValue() {
        var form = document.getElementsByTagName("form")[0];
        var val = document.getElementsByTagName("h2")[0];
        val.innerText = form.style.display === "none" ? "Add Data" : "Cancel";
      }
    </script>
  </body>
</html>
