<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Admin Panel</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #fff;
        color: #000;
      }

      h1,
      h2 {
        color: #f13c4a;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        border: 1px solid #000;
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #f13c4a;
        color: white;
      }

      a {
        text-decoration: none;
        margin-left: 10px;
        padding: 8px;
        color: #fff;
        background-color: #f13c4a;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      a:hover {
        background-color: #d1323f;
      }

      form {
        margin-top: 20px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #000;
      }

      input {
        padding: 8px;
        margin-bottom: 12px;
        width: 100%;
        box-sizing: border-box;
      }

      button {
        padding: 12px;
        background-color: #f13c4a;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #d1323f;
      }
    </style>
  </head>
  <body>
    <button style="background-color: black">
      <a href="/" style="background-color: black">home</a>
    </button>
    <h1>Causes List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Raised Money</th>
          <th>Goal</th>
          <th>Photo URL</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% causes.forEach(cause => { %>
        <tr>
          <td><%= cause.id %></td>
          <td><%= cause.title %></td>
          <td><%= cause.raised_money %></td>
          <td><%= cause.goal %></td>
          <td><%= cause.photourl %></td>
          <td>
            <a href="/causes/edit/<%= cause.id %>">Edit</a>
            <a href="/causes/delete/<%= cause.id %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <h2>Add Cause</h2>
    <form action="/causes/add" method="post">
      <label for="title">Title:</label>
      <input type="text" name="title" required />

      <label for="raised_money">Raised Money:</label>
      <input type="number" name="raised_money" required />

      <label for="goal">Goal:</label>
      <input type="number" name="goal" required />

      <label for="photourl">Photo URL:</label>
      <input type="text" name="photourl" />

      <button type="submit">Add Cause</button>
    </form>
  </body>
</html>
