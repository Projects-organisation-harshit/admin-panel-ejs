<!-- views/indexTeamMembers.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Admin Panel</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #f8f8f8;
        color: #000;
      }

      h1,
      h2 {
        color: #f13c4a;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        border: 1px solid #000;
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #f13c4a;
        color: white;
      }

      a {
        text-decoration: none;
        margin-left: 10px;
        padding: 8px;
        color: #fff;
        background-color: #f13c4a;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      a:hover {
        background-color: #d1323f;
      }

      form {
        margin-top: 20px;
        display: none;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #000;
      }

      input {
        padding: 8px;
        margin-bottom: 12px;
        width: 100%;
        box-sizing: border-box;
      }

      button {
        padding: 12px;
        background-color: #f13c4a;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #d1323f;
      }
    </style>
  </head>
  <body>
    <button style="background-color: black">
      <a href="/" style="background-color: black">home</a>
    </button>

    <h2
      onclick="toggleFormVisibility()"
      style="
        background-color: #f13c4a;
        width: max-content;
        color: white;
        padding: 10px;
        border-radius: 10px;
        font-size: medium;
        cursor: pointer;
      "
    >
      Add Data
    </h2>
    <form action="/team_members/add" method="post">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" required />

      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" required />

      <label for="photoUrl">Photo URL:</label>
      <input type="text" name="photoUrl" />

      <label for="role">Role:</label>
      <input type="text" name="role" required />

      <label for="email">Email:</label>
      <input type="email" name="email" required />

      <label for="phone_number">Phone Number:</label>
      <input type="number" name="phone_number" required />

      <label for="date_of_joining">Date of Joining:</label>
      <input type="date" name="date_of_joining" required />

      <button type="submit">Add Team Member</button>
    </form>
    <h1>Team Members List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Photo URL</th>
          <th>Date of Joining</th>
          <th>Role</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% teamMembers.forEach(member => { %>
        <tr>
          <td><%= member.id %></td>
          <td><%= member.first_name %></td>
          <td><%= member.last_name %></td>
          <td><%= member.photoUrl %></td>
          <td><%= member.date_of_joining %></td>
          <td><%= member.role %></td>
          <td><%= member.email %></td>
          <td><%= member.phone_number %></td>
          <td>
            <a
              href="/team_members/edit/<%= member.id %>"
              style="background-color: rgb(86, 86, 255)"
              >Edit</a
            >
            <a
              href="/team_members/delete/<%= member.id %>"
              style="background-color: #d1323f"
              >Delete</a
            >
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <script>
      function toggleFormVisibility() {
        var form = document.getElementsByTagName("form")[0];
        form.style.display = form.style.display === "none" ? "block" : "none";
        changeValue();
      }
      function changeValue() {
        var form = document.getElementsByTagName("form")[0];
        var val = document.getElementsByTagName("h2")[0];
        val.innerText = form.style.display === "none" ? "Add Data" : "Cancel";
      }
    </script>
  </body>
</html>
