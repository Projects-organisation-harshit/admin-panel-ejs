<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Admin Panel</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #fff;
        color: #000;
      }

      h1,
      h2 {
        color: #f13c4a;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        border: 1px solid #000;
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #f13c4a;
        color: white;
      }

      a {
        text-decoration: none;
        margin-left: 10px;
        padding: 8px;
        color: #fff;
        background-color: #f13c4a;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      a:hover {
        background-color: #d1323f;
      }

      form {
        margin-top: 20px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #000;
      }

      input {
        padding: 8px;
        margin-bottom: 12px;
        width: 100%;
        box-sizing: border-box;
      }

      button {
        padding: 12px;
        background-color: #f13c4a;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #d1323f;
      }
    </style>
  </head>
  <body>
    <h1>News List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Photo URL</th>
          <th>Article Link</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% news.forEach(news => { %>
        <tr>
          <td><%= news.id %></td>
          <td><%= news.title %></td>
          <td><%= news.description %></td>
          <td><%= news.photourl %></td>
          <td><%= news.articlelink %></td>
          <td><%= news.date %></td>

          <td>
            <a href="/news/edit/<%= news.id %>">Edit</a>
            <a href="/news/delete/<%= news.id %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <h2>Add News</h2>
    <form action="/news/add" method="post">
      <label for="title">Title:</label>
      <input type="text" name="title" required />

      <label for="description">Description:</label>
      <input type="text" name="description" required />

      <label for="photourl">Photo URL:</label>
      <input type="text" name="photourl" />

      <label for="articlelink">Article Link:</label>
      <input type="text" name="articlelink" required />

      <label for="date">Date:</label>
      <input type="date" name="date" required />

      <button type="submit">Add News</button>
    </form>
  </body>
</html>
